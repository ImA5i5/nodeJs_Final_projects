<!-- views/layouts/main.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || "Freelancer Marketplace" %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>

  <body class="bg-gray-50 font-sans text-gray-800">
    <!-- Navbar -->
    <header class="bg-white shadow-md py-4">
      <div class="container mx-auto flex justify-between items-center px-4">
        <h1 class="text-2xl font-bold text-blue-600">
          <a href="/">Freelancer Marketplace</a>
        </h1>
        <nav class="flex gap-4">
          <a href="/auth/login" class="hover:text-blue-500">Login</a>
          <a href="/auth/register" class="hover:text-blue-500">Register</a>
        </nav>
      </div>
    </header>

    <!-- Flash Messages -->
    
<div class="container mx-auto mt-4 px-4">
  <% if (error && error.length > 0) { %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded">
      <%= error[0] %>
    </div>
  <% } %>

  <% if (success && success.length > 0) { %>
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded">
      <%= success[0] %>
    </div>
  <% } %>

  <% if (info && info.length > 0) { %>
    <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4 rounded">
      <%= info[0] %>
    </div>
  <% } %>
</div>


    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
      <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t py-4 mt-12 text-center text-sm text-gray-600">
      © <%= new Date().getFullYear() %> Freelancer Marketplace — All rights reserved.
    </footer>
  </body>
</html>
