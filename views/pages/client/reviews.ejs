<!-- views/pages/client/reviews.ejs -->
<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-green-700">‚≠ê My Reviews</h1>
    <button
      id="refreshReviews"
      class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded shadow"
    >
      üîÑ Refresh
    </button>
  </div>

  <div id="reviewsContainer">
    <% if (reviews && reviews.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% reviews.forEach(r => { %>
          <div class="bg-white border border-gray-200 p-5 rounded-lg shadow hover:shadow-lg transition">
            <div class="flex items-center gap-3 mb-4">
              <img
                src="<%= r.freelancer?.profile?.profilePic || '/images/default-avatar.png' %>"
                alt="Freelancer"
                class="w-12 h-12 rounded-full object-cover"
              />
              <div>
                <h3 class="text-lg font-semibold text-gray-800"><%= r.freelancer?.fullName %></h3>
                <p class="text-sm text-gray-500"><%= r.project?.title %></p>
              </div>
            </div>

            <!-- Rating -->
            <div class="flex mb-3">
              <% for (let i = 1; i <= 5; i++) { %>
                <% if (i <= r.rating) { %>
                  <span class="text-yellow-500 text-lg">‚òÖ</span>
                <% } else { %>
                  <span class="text-gray-300 text-lg">‚òÖ</span>
                <% } %>
              <% } %>
            </div>

            <p class="text-gray-700 mb-3"><%= r.comment %></p>
            <p class="text-xs text-gray-400">Reviewed on <%= new Date(r.createdAt).toLocaleDateString() %></p>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-gray-500 mt-10">You haven‚Äôt left any reviews yet.</p>
    <% } %>
  </div>
</div>

<script>
document.getElementById("refreshReviews").addEventListener("click", async () => {
  try {
    const res = await fetch("/review/client/ajax");
    const data = await res.json();

    if (data.success) {
      const container = document.getElementById("reviewsContainer");
      container.innerHTML = "";

      if (data.reviews.length === 0) {
        container.innerHTML = `<p class='text-center text-gray-500 mt-10'>You haven‚Äôt left any reviews yet.</p>`;
        return;
      }

      const cards = data.reviews.map(r => `
        <div class="bg-white border border-gray-200 p-5 rounded-lg shadow hover:shadow-lg transition">
          <div class="flex items-center gap-3 mb-4">
            <img src="${r.freelancer?.profile?.profilePic || '/images/default-avatar.png'}" alt="Freelancer" class="w-12 h-12 rounded-full object-cover" />
            <div>
              <h3 class="text-lg font-semibold text-gray-800">${r.freelancer?.fullName || 'Unknown'}</h3>
              <p class="text-sm text-gray-500">${r.project?.title || ''}</p>
            </div>
          </div>
          <div class="flex mb-3">
            ${[1,2,3,4,5].map(i => i <= r.rating ? '‚òÖ' : '<span class="text-gray-300">‚òÖ</span>').join('')}
          </div>
          <p class="text-gray-700 mb-3">${r.comment || ''}</p>
          <p class="text-xs text-gray-400">Reviewed on ${new Date(r.createdAt).toLocaleDateString()}</p>
        </div>
      `).join("");

      container.innerHTML = `<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">${cards}</div>`;
    }
  } catch (error) {
    alert("Failed to refresh reviews.");
  }
});
</script>
