<!-- views/pages/client/view-freelancer.ejs -->
<div class="p-8">
  <!-- Header -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
    <div class="flex items-center gap-5">
      <img
        src="<%= freelancer.profile?.profilePic || 'https://cdn-icons-png.flaticon.com/512/149/149071.png' %>"
        alt="Profile"
        class="w-20 h-20 rounded-full border-4 border-green-500 object-cover"
      />
      <div>
        <h1 class="text-3xl font-bold text-gray-800"><%= freelancer.fullName %></h1>
        <p class="text-gray-500"><%= freelancer.profile?.bio || 'No bio provided.' %></p>
        <p class="text-yellow-500 font-semibold mt-1">‚≠ê <%= avgRating || 0 %> / 5</p>
      </div>
    </div>

    <!-- Hire Button Dropdown -->
    <div class="mt-4 md:mt-0">
      <label for="hireProject" class="block text-sm font-semibold mb-2 text-gray-700">Hire for Project:</label>
      <div class="flex gap-2">
        <select id="hireProject" class="border border-gray-300 rounded px-3 py-2">
          <option value="">Select Project</option>
          <% if (projects && projects.length > 0) { %>
            <% projects.forEach(p => { %>
              <option value="<%= p._id %>"><%= p.title %></option>
            <% }) %>
          <% } else { %>
            <option disabled>No active projects</option>
          <% } %>
        </select>
        <button
          id="hireBtn"
          class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded transition"
          data-freelancer="<%= freelancer._id %>"
        >
          ü§ù Hire
        </button>
      </div>
    </div>
  </div>

  <!-- Freelancer Info -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Profile Summary -->
    <div class="col-span-2 bg-white p-6 rounded-lg shadow-md border">
      <h2 class="text-xl font-semibold text-green-700 mb-3">About</h2>
      <p class="text-gray-700 leading-relaxed"><%= freelancer.profile?.bio || "No description provided." %></p>

      <h3 class="text-lg font-semibold mt-6 mb-2">Skills</h3>
      <div class="flex flex-wrap gap-2">
        <% (freelancer.profile?.skills || []).forEach(skill => { %>
          <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-medium"><%= skill %></span>
        <% }) %>
      </div>

      <h3 class="text-lg font-semibold mt-6 mb-2">Hourly Rate</h3>
      <p class="text-gray-800 font-medium text-lg">‚Çπ<%= freelancer.profile?.hourlyRate || 'N/A' %> / hr</p>
    </div>

    <!-- Portfolio -->
    <div class="bg-white p-6 rounded-lg shadow-md border">
      <h2 class="text-xl font-semibold text-green-700 mb-4">Portfolio</h2>
      <% if (freelancer.profile?.portfolio && freelancer.profile.portfolio.length > 0) { %>
        <div class="grid grid-cols-2 gap-3">
          <% freelancer.profile.portfolio.forEach(item => { %>
            <a href="<%= item %>" target="_blank">
              <img
                src="<%= item %>"
                alt="Portfolio Item"
                class="rounded-lg border hover:opacity-80 transition"
              />
            </a>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-500">No portfolio uploaded yet.</p>
      <% } %>
    </div>
  </div>

  <!-- Reviews -->
  <div class="mt-10 bg-white p-6 rounded-lg shadow-md border">
    <h2 class="text-xl font-semibold text-green-700 mb-4">Client Reviews</h2>

    <% if (reviews && reviews.length > 0) { %>
      <div class="space-y-4">
        <% reviews.forEach(r => { %>
          <div class="border-b pb-3">
            <div class="flex items-center justify-between mb-1">
              <h4 class="font-semibold text-gray-800">
                üë§ <%= r.client?.fullName || "Anonymous Client" %>
              </h4>
              <span class="text-yellow-500 font-medium">‚≠ê <%= r.rating %>/5</span>
            </div>
            <p class="text-gray-600"><%= r.comment || "No comment provided." %></p>
            <p class="text-xs text-gray-400 mt-1"><%= new Date(r.createdAt).toLocaleDateString() %></p>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-500">No reviews yet.</p>
    <% } %>
  </div>
</div>

<!-- ‚úÖ AJAX Script: Hire Freelancer -->
<script>
  document.getElementById("hireBtn").addEventListener("click", async () => {
    const freelancerId = document.getElementById("hireBtn").dataset.freelancer;
    const projectId = document.getElementById("hireProject").value;

    if (!projectId) {
      alert("Please select a project first!");
      return;
    }

    const btn = document.getElementById("hireBtn");
    btn.disabled = true;
    btn.textContent = "‚è≥ Hiring...";

    try {
      const response = await fetch(`/client/hire/${freelancerId}/${projectId}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
      });
      const data = await response.json();

      if (data.success) {
        btn.textContent = "‚úÖ Hired Successfully";
        btn.classList.add("bg-green-500");
      } else {
        alert(data.message || "Failed to hire freelancer");
        btn.textContent = "ü§ù Hire";
        btn.disabled = false;
      }
    } catch (error) {
      console.error("Error hiring freelancer:", error);
      alert("Error: Could not complete hiring process.");
      btn.textContent = "ü§ù Hire";
      btn.disabled = false;
    }
  });
</script>
