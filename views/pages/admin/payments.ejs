<!-- views/pages/admin/payments.ejs -->
<div class="max-w-7xl mx-auto p-6">
  <h2 class="text-2xl font-bold text-green-700 mb-6">ðŸ’° Payments & Transactions</h2>

  <!-- âœ… Manual Payout Box -->
  <div class="bg-white rounded-xl shadow p-4 mb-6">
    <h3 class="font-semibold mb-3">ðŸ’¸ Manual Payout</h3>
    <div class="flex flex-wrap items-center gap-3">
      <input id="payoutFreelancer" type="text" placeholder="Freelancer ID"
             class="border rounded px-3 py-2 text-sm w-64">

      <input id="payoutAmount" type="number" placeholder="Amount (â‚¹)"
             class="border rounded px-3 py-2 text-sm w-40">

      <button id="payoutBtn"
              class="bg-green-600 hover:bg-green-700 text-white px-3 py-2 rounded text-sm">
        Send Payout
      </button>
    </div>
  </div>

  <!-- âœ… Transactions Table -->
  <% if (transactions && transactions.length) { %>
    <div class="overflow-x-auto bg-white rounded-xl shadow">
      <table class="min-w-full text-sm">
        <thead class="bg-gray-50 text-gray-700">
          <tr>
            <th class="p-3 text-left">Type</th>
            <th class="p-3 text-left">Client</th>
            <th class="p-3 text-left">Freelancer</th>
            <th class="p-3 text-left">Milestone</th>
            <th class="p-3 text-center">Amount</th>
            <th class="p-3 text-center">Status</th>
            <th class="p-3 text-center">Created</th>
            <th class="p-3 text-center">Action</th>
          </tr>
        </thead>

        <tbody>
          <% transactions.forEach(t => { %>
            <tr class="border-t hover:bg-gray-50">
              <td class="p-3"><%= t.type %></td>
              <td class="p-3"><%= t.client?.fullName || t.client?.email || '-' %></td>
              <td class="p-3"><%= t.freelancer?.fullName || t.freelancer?.email || '-' %></td>
              <td class="p-3"><%= t.milestone?.title || ('#' + (t.milestone?._id || '-')) %></td>

              <td class="p-3 text-center">â‚¹<%= t.amount %></td>

              <td class="p-3 text-center">
                <span class="px-2 py-1 rounded-full text-xs font-semibold
                  <%= t.status === 'completed'
                        ? 'bg-green-100 text-green-700'
                        : t.status === 'pending'
                        ? 'bg-yellow-100 text-yellow-700'
                        : 'bg-red-100 text-red-700' %>">
                  <%= t.status %>
                </span>
              </td>

              <td class="p-3 text-center"><%= new Date(t.createdAt).toLocaleString() %></td>

              <td class="p-3 text-center">
                <% if (t.type === 'release' && t.freelancer?._id) { %>
                  <button 
                    class="quickPayoutBtn bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs"
                    data-freelancer="<%= t.freelancer?._id %>"
                    data-amount="<%= t.amount %>">
                    ðŸ’¸ Payout
                  </button>
                <% } else { %>
                  <span class="text-gray-400 text-xs italic">â€”</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>

      </table>
    </div>

  <% } else { %>
    <div class="bg-white rounded-xl shadow p-10 text-center text-gray-600">No transactions found.</div>
  <% } %>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.addEventListener('DOMContentLoaded', () => {

  // âœ… Manual payout button
  document.getElementById('payoutBtn').addEventListener('click', async () => {
    const freelancerId = document.getElementById('payoutFreelancer').value.trim();
    const amount = Number(document.getElementById('payoutAmount').value);

    if (!freelancerId || !amount) {
      return Swal.fire("Missing info", "Enter Freelancer ID and Amount", "warning");
    }

    const confirm = await Swal.fire({
      title: "Confirm Payout",
      text: `Send â‚¹${amount}?`,
      icon: "question",
      showCancelButton: true
    });

    if (!confirm.isConfirmed) return;

    const res = await fetch("/admin/payments/payout", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ freelancerId, amount })
    });

    const data = await res.json();
    Swal.fire(data.success ? "âœ… Payout Sent" : "âŒ Error",
              data.message || "",
              data.success ? "success" : "error");

    if (data.success) setTimeout(() => location.reload(), 1000);
  });

  // âœ… Quick payout buttons in table
  document.querySelectorAll(".quickPayoutBtn").forEach(btn => {
    btn.addEventListener("click", () => {
      const freelancerId = btn.dataset.freelancer;
      const amount = Number(btn.dataset.amount);

      // autofill manual payout inputs
      document.getElementById('payoutFreelancer').value = freelancerId;
      document.getElementById('payoutAmount').value = amount;

      // trigger payout flow
      document.getElementById("payoutBtn").click();
    });
  });

});
</script>
