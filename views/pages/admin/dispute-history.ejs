<!-- views/pages/admin/dispute-history.ejs -->
<div class="container mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-blue-700">ğŸ•’ Dispute History - <%= dispute.projectTitle %></h2>
    <a href="/admin/disputes"
       class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded">
      â† Back to Disputes
    </a>
  </div>

  <!-- Dispute Summary Card -->
  <div class="bg-white shadow rounded p-4 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-gray-700">
      <p><span class="font-semibold">Client:</span> <%= dispute.clientName %></p>
      <p><span class="font-semibold">Freelancer:</span> <%= dispute.freelancerName %></p>
      <p>
        <span class="font-semibold">Status:</span>
        <span class="capitalize font-semibold 
          <%= dispute.status === 'resolved' ? 'text-green-600' :
              dispute.status === 'in-review' ? 'text-yellow-600' :
              dispute.status === 'open' ? 'text-blue-600' : 'text-red-600' %>">
          <%= dispute.status %>
        </span>
      </p>
    </div>
    <% if (dispute.resolution) { %>
      <p class="mt-2 text-gray-600"><span class="font-semibold">Resolution:</span> <%= dispute.resolution %></p>
    <% } %>
  </div>

  <!-- Timeline Section -->
  <div class="bg-white shadow rounded p-6">
    <h3 class="text-xl font-semibold mb-4 text-gray-800">ğŸ“œ Action Timeline</h3>

    <% if (!dispute.history || dispute.history.length === 0) { %>
      <p class="text-center text-gray-500">No actions recorded for this dispute yet.</p>
    <% } else { %>
      <ol class="relative border-s border-gray-200 dark:border-gray-700 ml-3">
        <% dispute.history.sort((a, b) => new Date(a.timestamp) - new Date(b.timestamp)).forEach(item => { %>
          <% 
            let colorClass, icon;
            switch (item.action.toLowerCase()) {
              case "resolved":
              case "payment released":
                colorClass = "bg-green-500";
                icon = "âœ…";
                break;
              case "refund approved":
                colorClass = "bg-red-500";
                icon = "ğŸ’³";
                break;
              case "marked in-review":
                colorClass = "bg-yellow-500";
                icon = "ğŸ•Šï¸";
                break;
              default:
                colorClass = "bg-blue-500";
                icon = "âš™ï¸";
            }
          %>
          <li class="mb-8 ms-4">
            <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-white <%= colorClass %>"></div>
            <time class="mb-1 text-sm font-normal leading-none text-gray-400">
              <%= new Date(item.timestamp).toLocaleString() %>
            </time>
            <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
              <span><%= icon %></span> <%= item.action %>
            </h3>
            <p class="text-gray-700 mb-1"><%= item.message || "No message provided." %></p>
            <p class="text-xs text-gray-500 italic">By <%= item.actor %></p>
          </li>
        <% }) %>
      </ol>
    <% } %>
  </div>
</div>

<!-- Optional: Flowbite for enhanced timeline styling -->
<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
