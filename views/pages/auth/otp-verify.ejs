<div class="max-w-md mx-auto bg-white shadow-lg rounded-lg p-8 mt-12">
  <h2 class="text-2xl font-bold text-center text-blue-600 mb-6">Verify Your Email</h2>

  <% if (error && error.length) { %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-3 mb-4 rounded"><%= error[0] %></div>
  <% } %>

  <% if (success && success.length) { %>
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-3 mb-4 rounded"><%= success[0] %></div>
  <% } %>

  <form action="/auth/verify-otp" method="POST" class="space-y-4">
    <p class="text-gray-600 text-center mb-4">
      Enter the 6-digit OTP sent to <strong><%= email %></strong>
    </p>

    <div>
      <label for="otp" class="block text-sm font-semibold mb-1">OTP</label>
      <input type="text" name="otp" maxlength="6" required class="w-full border border-gray-300 rounded p-2 text-center" />
    </div>

    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded">
      Verify OTP
    </button>
  </form>

  <p class="text-center text-sm text-gray-600 mt-4">
    Didnâ€™t receive the OTP? <a href="/auth/register" class="text-blue-600 hover:underline">Try again</a>
  </p>
</div>
